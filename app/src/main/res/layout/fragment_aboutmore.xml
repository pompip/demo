<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/driver_guide_fragment_about_more"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="16dp"
            android:clickable="true"

            card_view:cardBackgroundColor="@color/font_red"
            card_view:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="司机指南"
                android:textSize="22sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/honor_list_fragment_about_more"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/font_red"
            card_view:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="荣誉榜"
                android:textSize="22sp" />

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/system_message_fragment_about_more"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/font_red"
            card_view:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="系统消息"
                android:textSize="22sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/feedback_fragment_about_more"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/font_red"
            card_view:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="意见反馈"
                android:textSize="22sp" />
        </android.support.v7.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/aboutus_fragment_about_more"

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/font_red"
            card_view:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="关于我们"
                android:textSize="22dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/check_version_fragment_more"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            card_view:cardBackgroundColor="@color/font_red"
            card_view:cardCornerRadius="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="检查更新"
                android:textSize="22dp" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>